        <TextBox x:Name="txtBreed" HorizontalAlignment="Left" Margin="149,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPictureURL" HorizontalAlignment="Left" Margin="149,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
